<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.animalhaven.hansportable.myanimalhaven.EnterLivingAreaDetails">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codeText"
        android:layout_alignBottom="@+id/codeLbl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/spaceAvailLbl"
        android:layout_toEndOf="@+id/spaceAvailLbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Code"
        android:id="@+id/codeLbl"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/nameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/nameLbl"
        android:layout_above="@+id/spaceText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameText"
        android:layout_alignBottom="@+id/nameLbl"
        android:layout_alignRight="@+id/codeText"
        android:layout_alignEnd="@+id/codeText"
        android:layout_toRightOf="@+id/spaceAvailLbl"
        android:layout_toEndOf="@+id/spaceAvailLbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Space Available"
        android:id="@+id/spaceAvailLbl"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spaceText"
        android:layout_alignBottom="@+id/spaceAvailLbl"
        android:layout_toRightOf="@+id/spaceAvailLbl"
        android:layout_alignRight="@+id/nameText"
        android:layout_alignEnd="@+id/nameText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed To Save"
        android:id="@+id/openSaveLivingAreaActivity"
        android:layout_marginTop="51dp"
        android:nestedScrollingEnabled="true"
        android:onClick="openSave"
        android:layout_below="@+id/spaceAvailLbl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
